{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "livecode",
  "version": "0.1.0",
  "identifier": "com.marco.live-code",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LiveCode",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 700,
        "minHeight": 500,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
